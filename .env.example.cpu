# CPU Development Environment
# Minimal settings for local development and testing

## Local Development (no remote connection needed)
# REMOTE_HOST=localhost
# SSH_KEY_PATH=~/.ssh/id_ed25519

## TensorBoard (local)
TB_PORT=6006
TB_LOGDIR=artifacts/train_showcase/tb

## NSA Runtime Configuration (CPU/synthetic mode)
NSA_DTYPE=fp32
NSA_ENABLE_FA2=0
NSA_USE_TRITON_SEL=0
NSA_TRITON_SEL_FORCE=0
NSA_PREFILL_BATCHED=0

## Data Pipeline (local/synthetic)
HF_HOME=./hf_cache
HF_DATASETS_CACHE=./hf_cache/datasets
NSA_DATA_CACHE=artifacts/hf_cache
NSA_TOKENIZER=byte

## Watchdog (Minimal for CPU testing)
NSA_WATCH_HALT=0
NSA_WATCH_INTERVAL_S=120
NSA_WATCH_HEARTBEAT_STALL_S=600
NSA_WATCH_FLATLINE_N=10

## Training Telemetry
NSA_LOG_GRAD_NORM=0

## CPU-Specific Settings
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4
NSA_PREFILL_BATCH_SIZE=1
NSA_MAX_SEQ_LEN=512

## Development/Debug
CUDA_LAUNCH_BLOCKING=0
NSA_DEBUG_TIMING=1
NSA_DEBUG_SHAPES=1