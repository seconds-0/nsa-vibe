# RTX 4090 24GB Development Environment  
# Conservative settings for consumer hardware and debugging

## Remote Connection
REMOTE_HOST=user@rtx4090-host
SSH_KEY_PATH=~/.ssh/id_ed25519
SSH_OPTS=-o BatchMode=yes -o StrictHostKeyChecking=accept-new -o ConnectTimeout=30

## TensorBoard
TB_PORT=6006
TB_LOGDIR=artifacts/train_showcase/tb

## NSA Runtime Configuration (SDPA-only for SM 8.9)
NSA_DTYPE=fp32
NSA_ENABLE_FA2=0
NSA_USE_TRITON_SEL=0
NSA_TRITON_SEL_FORCE=0
NSA_PREFILL_BATCHED=0

## Data Pipeline
HF_HOME=./hf_cache
HF_DATASETS_CACHE=./hf_cache/datasets  
NSA_DATA_CACHE=artifacts/hf_cache
NSA_TOKENIZER=byte

## Watchdog (Relaxed for development)
NSA_WATCH_HALT=0
NSA_WATCH_INTERVAL_S=60
NSA_WATCH_HEARTBEAT_STALL_S=300
NSA_WATCH_FLATLINE_N=8

## Training Telemetry
NSA_LOG_GRAD_NORM=1

## Memory Management (Conservative for 24GB)
NSA_PREFILL_BATCH_SIZE=2
NSA_MAX_SEQ_LEN=2048

## Development Settings
CUDA_LAUNCH_BLOCKING=1
NSA_DEBUG_TIMING=0
NSA_DEBUG_SHAPES=0